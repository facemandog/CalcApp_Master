// This is the vercel.json we suspect is active
{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    // API route first
    {
      "src": "/calculate",
      "methods": ["POST"], // <<< Check: Is this correctly matching?
      "dest": "server.js"  // <<< Check: Is this pointing correctly?
    },
    // Serve index.html specifically for the root path
    { "src": "/", "dest": "/public/index.html" },
    // Serve other static files
    { "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico))$", "dest": "/public/$1" },
    // Fallback to server
    { "src": "/(.*)", "dest": "server.js" } // <<< This might be interfering or unnecessary
  ]
}
{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    // API route (MUST be first or clearly distinct)
    {
      "src": "/calculate",
      "methods": ["POST"],
      "dest": "server.js"
    },
    // Serve index.html specifically for the root path
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    // Serve other static files (js, css, assets)
    // Make sure this pattern is correct and doesn't accidentally match /calculate
    {
      "src": "/((?!calculate)[^/]*\\.(js|css|png|jpg|jpeg|gif|svg|ico))$", // Match static extensions BUT NOT /calculate
      "dest": "/public/$1"
    },
    // Serve index.html for any other non-file path (common for SPAs, might help)
    {
        "src": "/(.*)",
        "dest": "/public/index.html"
    }
    // REMOVED the original "/(.*)" -> "server.js" fallback
  ]
}